@model IEnumerable<MVCProject.Models.OrderDTO>

@*Shared Folder Partial View*@
<div id="ordList">
    <table class="table">
        <thead>
            <tr>
                <th>Order No.</th>
                <th>Order Date</th>
                <th>Customer Name</th>
                <th>Total Amount</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><input type="text" style="background-color: #FFFFFF;" class="form-control" value="@item.OrderNo" readonly /></td>
                    <td><input type="text" style="background-color: #FFFFFF;" class="form-control" value="@item.OrderDate.ToShortDateString()" readonly /></td>
                    <td><input type="text" style="background-color: #FFFFFF;" class="form-control" value="@item.customer.ContactName" readonly /></td>
                    <td><input type="number" style="background-color: #FFFFFF;" class="form-control" value="@item.TotalAmount" readonly /></td>
                    <td>@Html.ActionLink("Edit", "EditOrder", new { @class = "btn btn-primary btn-sm", Id = item.Id })</td>
                </tr>
            }
        </tbody>
        
    </table>
</div>
